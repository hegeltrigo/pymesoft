<div class="row">
  <div class="col-sm-12">
    <div class="header-title m-t-0 m-b-20">
      <div class="row">
        <div class="col-md-6">
          <h5>Detalles de Compañia</h5>
        </div>
      </div>
    </div>
  </div>                 
</div>      

<div class="container">
  <div class="row" style="justify-content: center;">
    <div class='col-md-12' style="flex-direction: column; display: flex;">
      <% if @company_detail&.logo&.attached? %>
          <p class=''>
            <%= image_tag(@company_detail.logo, :style => "width:300px;height:auto;")   %>
          </p>
      <% end %>
    </div>
    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;" for="company_name">Nombre de la empresa</label>
      <span id="company_name"><%= @company_detail.try(:company_name) || 'No registrado'%></span>
    </div>
    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;">NIT de la empresa</label>
      <span><%= @company_detail.try(:nit) || 'No registrado'%></span>
    </div>
    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;">Dirección</label>
      <span><%= @company_detail.try(:address) || 'No registrado'%></span>
    </div>
    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;">Ciudad</label>
      <span><%= @company_detail.try(:city) || 'No registrado'%></span>
    </div>
    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;">Departamento</label>
      <span><%= @company_detail.try(:state) || 'No registrado'%></span>
    </div>
    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;">País</label>
      <span><%= @company_detail.try(:country) || 'No registrado'%></span>
    </div>

    <div class="col-md-6" style="flex-direction: column; display: flex;">
      <label style="font-size:15px; margin-top: .5rem; margin-bottom: -3px;">Número de teléfono</label>
      <span><%= @company_detail.try(:phone_number) || 'No registrado'%></span>
    </div>

    <div class="col-md-6" style="flex-direction: column; display: flex;">
    </div>

    <% if @company_detail.try(:id).present? %>
      <div class="text-right" style="padding-top:15px;"><%= link_to 'Editar información', edit_company_detail_path(@company_detail.id), class: 'btn btn-primary' %> 
    <% else %>
      <div class="text-right" style="padding-top:15px;"><%= link_to 'Crear información', new_company_detail_path, class: 'btn btn-success' %>
    <% end %>
  </div>          
</div>

