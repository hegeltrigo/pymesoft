<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Tiluu - ERP</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <!-- App favicon -->
        <link rel="shortcut icon" href="assets/images/favicon.ico">

        <%= stylesheet_link_tag 'application' %>

    </head>

    <body>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="wrapper-page">

                            <div class="m-t-40 card-box">
                                <div class="text-center">
                                    <h2 class="text-uppercase m-t-0 m-b-30">
                                        <a href="index.html" class="text-success">
                                            <span><img src="/assets/images/logo_dark.png" alt="" height="30"></span>
                                        </a>
                                    </h2>
                                    <!--<h4 class="text-uppercase font-bold m-b-0">Sign In</h4>-->
                                </div>
                                <div class="account-content">
                                    <%= yield %>

                                    <div class="clearfix"></div>

                                </div>
                            </div>
                            <!-- end card-box-->


                            <div class="row m-t-50">
                                <div class="col-sm-12 text-center">
                                  <%- if controller_name != 'sessions' %>
                                    <div class="col-sm-12 text-center">
                                        <p class="text-muted">¿Ya tienes una cuenta? <%= link_to "Ingresar", new_session_path(resource_name), class: 'text-dark m-l-5' %></p>
                                    </div>
                                  <% end -%>

                                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                                    <p class="text-muted">¿No tienes una cuenta? <%= link_to "Registrarse", new_registration_path(resource_name), class: 'text-dark m-l-5' %></p>
                                  <% end -%>
                                </div>
                            </div>

                        </div>
                        <!-- end wrapper -->

                    </div>
                </div>
            </div>
        </section>
        <%= javascript_include_tag 'application' %>
        <%-# custom_bootstrap_flash  %>


    </body>
</html>
