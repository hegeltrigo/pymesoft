<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'signup', class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group m-b-20">
    <div class="col-xs-12">
        <label for="username">Email</label>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'juan@hotmail.com' %>
    </div>
</div>

<div class="form-group m-b-20">
    <div class="col-xs-12">
        <label for="password">Contrase単a</label>
        <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: 'Ingrese su contrase単a' %>
    </div>
</div>

<div class="form-group m-b-20">
    <div class="col-xs-12">
        <label for="password">Repetir contrase単a</label>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: 'Ingrese su contrase単a' %>
    </div>
</div>

<div class="form-group account-btn text-center m-t-10">
    <div class="col-xs-12">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Registrarse</button>
    </div>
</div>

<% end %>