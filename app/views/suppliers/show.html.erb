<div class="row">
    <div class="col-sm-12">
        <h4 class="header-title m-t-0 m-b-20">Proveedor</h4>
    </div>                 
</div>      

<div class="container">
  <div class="row">
    <div class="col-12">
        <br>
        <p>
          <strong>Nombre:</strong>
          <%= @supplier.name %>
        </p>

        <p>
          <strong>Dirección:</strong>
          <%= @supplier.address %>
        </p>
        
        <p>
          <strong>Telefono:</strong>
          <%= @supplier.cellphone %>
        </p>
        
        <p>
          <strong>Nit:</strong>
          <%= @supplier.identifier %>
        </p>

        <br>
        <%= link_to 'Editar', edit_supplier_path(@supplier), class: 'btn btn-primary' %> 
        <%= link_to 'Atrás', suppliers_path, class: 'btn btn-default' %>

    </div>          
  </div>
  
</div>


