
<% if session[:petty_cash_active].present? %>
  <p id="notice"><%= notice %></p>
 
  <div class="row">
    <div class="col-sm-12">
        <div class="header-title m-t-0 m-b-20">
          <div class="row">
            <div class="col-md-6">
              <h5>Salidas - Caja chica <%= @petty_cash.start_date.strftime('%d/%m/%Y %H:%M:%S') %></h5>
            </div>
            <div class="col-md-6">
              <div class="text-right" style="display:flex; justify-content:center;">
              <%= link_to 'Nueva Salida', new_treasury_output_path, class: 'btn btn-primary' %>
            </div>
          </div>

        </div>

    </div>                 
  </div>      

  <div class="container">
