            <thead>
              <tr>
                <th data-field="description" data-sortable="true">DescripciÃ³n</th>
                <th class="td-actions text-center" data-field="quantity">Cantidad</th>
                <th class="td-actions text-center" data-field="actions"></th>
              </tr>
            </thead>
          </table>
        </div>  
        <br>
      </div>          
    </div>
  </div>

<% else %>
  <div class="alert alert-warning" role="alert">
      Tiene que abrir caja para crear salidas
  </div>
<% end %>

